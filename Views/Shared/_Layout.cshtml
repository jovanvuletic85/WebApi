<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default" >
        <div class="container">
            <h3>Vehicle</h3>
            <ul class="nav nav-pills">
                <li class="active">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Index", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Model", "Models", "Home", new { area = "" }, null)</li>
            </ul>
         </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="modal-footer">
            <p>&copy; @DateTime.Now.Year - My API vehicle Application</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
